<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chatApp</title>
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    <h3>All chats</h3>
    <form method="get" action="/chats/new">
      <button>New Chat</button>
    </form>
    <% for(let chat of chats){ %>
    <div class="chats">
      <p>From: <%= chat.from %></p>
      <div class="message">
        <p>content: <%= chat.message %></p>
        <div class="edit">
          <form method="GET" action="/chats/<%= chat._id %>/edit">
            <button>Edit</button>
          </form>
        </div>
      </div>
      <p>Received By: <%= chat.to %></p>
      <hr />
      <p>createdAt: <%= chat.createdAt.toString().split(" ")[4] %></p>
      <p><%= chat.createdAt.toString().split(" ").slice(0,4).join(" ") %></p>
      <hr />
    </div>
    <% } %>
  </body>
</html>
